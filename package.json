{
  "name": "rxdb-flexsearch",
  "description": "RxDB Plugin based on FlexSearch implementation",
  "readmeFilename": "README.md",
  "version": "0.0.1",
  "license": "MIT",
  "keywords": [
    "flexsearch",
    "fulltext-search",
    "fuzzy-search",
    "fuzzy",
    "javascript",
    "nodejs",
    "rxdb",
    "search",
    "searching",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/serenysoft/rxdb-flexsearch"
  },
  "bugs": {
    "url": "https://github.com/serenysoft/rxdb-flexsearch/issues"
  },
  "author": {
    "name": "Leandro Guindani Gehlen",
    "email": "leandrogehlen@gmail.com"
  },
  "sideEffects": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "rimraf -rf dist/ && tsc --project tsconfig.dist.json",
    "lint": "eslint \"src/**/*\" \"tests/**/*\"",
    "release": "release-it --only-version",
    "test": "cross-env NODE_ENV=testing jest --verbose --runInBand --detectOpenHandles",
    "test:ci": "cross-env NODE_ENV=testing jest --verbose --collect-coverage --runInBand --forceExit"
  },
  "engines": {
    "node": ">= 16"
  },
  "peerDependencies": {
    "flexsearch": "0.7.21",
    "rxdb": "^14.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.8",
    "@faker-js/faker": "^8.0.2",
    "@jest/globals": "^29.6.1",
    "@types/jest": "^29.5.3",
    "@types/lodash": "^4.14.195",
    "@types/node": "^20.4.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "fake-indexeddb": "^4.0.1",
    "jest": "^29.6.1",
    "prettier": "^2.8.8",
    "release-it": "^16.1.0",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "release-it": {
    "git": {
      "commitMessage": "Release v${version}"
    },
    "hooks": {
      "before:init": [
        "npm run build"
      ]
    }
  },
  "dependencies": {
    "@types/flexsearch": "^0.7.3",
    "D": "^1.0.0"
  }
}
